{
  "restartable": "rs",
  "delay": 1000,
  "ignore": [
    ".git",
    "logs",
    "apidoc",
    "node_modules/**/node_modules"
  ],
  "execMap": {
    "js": "babel-node"
  },
  "watch": [
    "api/",
    "config/",
    "db/",
    "helpers/",
    "utils/",
    "services/",
    "app.js",
    "server.js",
    ".env",
    ".env.development"
  ],
  "ext": "js,json,ejs"
}
